{
    "name": "wt-alpha02",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build:client": "vue-cli-service build --dest dist/client --mode=development",
        "build:server": "cross-env SSR=1 vue-cli-service build --dest dist/server --mode=development",
        "build": "npm run build:client && npm run build:server && npm run start",
        "start": "node server.js",
        "prod": "vue-cli-service build --dest dist/client && cross-env SSR=1 vue-cli-service build --dest dist/server && npm run start",
        "lint": "cross-env ./node_modules/.bin/eslint --color --fix ./ && vue-cli-service lint --fix",
        "clear_uni:dist": "rm -rf ./dist"
    },
    "dependencies": {
        "@vue/server-renderer": "^3.1.5",
        "core-js": "^3.6.5",
        "cross-env": "^7.0.3",
        "vue": "^3.0.0",
        "webpack": "^4.44.0",
        "webpack-manifest-plugin": "^3.1.1",
        "webpack-node-externals": "^3.0.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^7.0.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/vue3-essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "rules": {}
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
